<?xml version='1.0' encoding='utf-8'?>
<widget id="com.caphyon.recipesfinder" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RecipesFinder</name>
    <icon src="logo.png" />
    <description>
        A sample Apache Cordova application that loads Recipes Finder app inside a InAppBrowser.
    </description>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <icon src="logo.png" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <cordova>
        <access origin="https://andreizet.github.io/modern-web-programming/vue-cli/dist/*"/>
    </cordova>
</widget>
